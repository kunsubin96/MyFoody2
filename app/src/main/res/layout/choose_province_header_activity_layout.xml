<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_search_choose_province"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/icon_search_province" />

        <EditText
            android:id="@+id/search_choose_province"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:ems="10"
            android:hint="@string/ACTION_QUICKSEARCH"
            android:padding="10.0dip"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/delete_choose_province"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/list_item_selector"
            android:padding="10.0dip"
            android:src="@drawable/icon_delete_search"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="#ffcccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:id="@+id/linear_layout_auto_detect_location"
        android:background="@drawable/list_item_selector"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:padding="8.0dip"
            android:text="@string/ACTION_AUTODETECT_LOCATION"
            android:textColor="#ff000000"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:layout_width="15.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:src="@drawable/icon_detect_location" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_action_change_country"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#ffefefef"
        android:gravity="center">

        <TextView
            android:id="@+id/text_view_country_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:padding="8.0dip"
            android:text="Vietnam"
            android:textColor="#ff000000"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/list_item_selector"
            android:gravity="center|right"
            android:text="@string/ACTION_CHANGE_COUNTRY"
            android:textColor="@color/micro_site_title_sub"
            android:textSize="10.0sp" />

        <ImageView
            android:layout_width="30.0dip"
            android:layout_height="25.0dip"
            android:src="@drawable/icon_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffdddddd" />
</LinearLayout>